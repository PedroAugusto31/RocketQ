<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS -->
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/room.css" />
    <link rel="stylesheet" href="/styles/modal.css" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="shortcut icon"
      type="image/svg"
      href="/images/rocketQMiniLogoNLW.svg"
    />

    <!-- Scripts -->
    <script src="/scripts/main.js" defer type="module"></script>
    <title>Perguntas e respostas - Rocket.Q</title>
  </head>
  <body>
    <div id="room" class="content">
      <header>
        <a href="/">
          <img src="/images/logoProjetoNLW.svg" alt="logo Rocketseat.Q" />
        </a>

        <div class="buttons">
          <div class="button outlined" id="room-id" data-id="<%= roomId %>">
            #<%= roomId %>
            <img src="/images/copyImageNLW.svg" alt="copiar número da sala" />
          </div>

          <a href="/create-pass" class="button">
            <img
              src="/images/usersIconSoQueBrancoNLW.svg"
              alt="Ícone usuário"
            />
            Criar sala
          </a>
        </div>
      </header>

      <main>
        <section id="question-form">
          <h2>Faça sua pergunta</h2>
          <form action="/question/create/<%= roomId %>" method="POST">
            <label class="sr-only" for-id="question"
              >O que você quer perguntar?</label
            >
            <textarea
              name="question"
              id="question"
              placeholder="O que você quer perguntar?"
            ></textarea>

            <footer>
              <div>
                <img src="/images/chainIconNLW.svg" alt="Ícone de cadeado" />
                Esta pergunta é anônima
              </div>
              <button>Enviar</button>
            </footer>
          </form>
        </section>
        <section id="questions">
          <h2 class="sr-only">Perguntas da comunidade</h2>
          <div class="questions">

            <% if(isNoQuestions) {%>
              <%- include('parts/noQuestion')%>
              <% }%>

            <% questions.forEach(question => { %>

            <div class="question-wrapper">
              <div class="question-content">
                <div class="user">
                  <img
                    src="/images/userMiniIconNLW.svg"
                    alt="Ícone de usuário"
                  />
                </div>
                <div class="question">
                  <p><%= question.title %></p>
                </div>
              </div>
              <div class="actions">
                <a href="#" class="check" data-id="<%= question.id%>">
                  <img src="/images/checkIconNLW.svg" alt="Marcar como lida" />
                  Marcar como lida
                </a>
                <a href="#" class="delete" data-id="<%= question.id%>">
                  <img src="/images/trashIconNLW.svg" alt="Excluir" />
                  Excluir
                </a>
              </div>
            </div>
            <% }) %>
            
            <% questionsRead.forEach(questionRead => { %>
              <div class="question-wrapper read">
              <div class="question-content">
                <div class="user">
                  <img
                    src="/images/userMiniIconNLW.svg"
                    alt="Ícone de usuário"
                  />
                </div>
                <div class="question">
                  <p><%= questionRead.title %></p>
                </div>
              </div>
              <div class="actions">
                <a href="#" class="delete" data-id="<%= questionRead.id%>">
                  <img src="/images/trashIconNLW.svg" alt="Excluir" />
                  Excluir
                </a>
              </div>
              <% }) %>

    <!-- Modal -->
    <div class="modal-wrapper">
      <div class="modal">
        <h2>Excluir pergunta</h2>
        <p>Tem certeza que você deseja excluir esta pergunta?</p>
        <form action="#" method="POST">
          <label class="sr-only" for-id="password"
            >Digite sua senha de admin</label
          >
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Digite sua senha de admin"
          />

          <div class="buttons">
            <button class="button grey" id="cancel">Cancelar</button>
            <button class="red" id="action">Sim, excluir</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
